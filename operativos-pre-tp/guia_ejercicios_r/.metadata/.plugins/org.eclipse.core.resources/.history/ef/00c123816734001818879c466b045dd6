#include <stdio.h>
#include <stdlib.h>
#include <string.h>
/*
*   Retorna un String nuevo que es la concatenaci칩n
*   de los dos Strings pasados por par치metro
*   Ejemplo:
*   char* nombre = "Ritchie";
*   char* saludo = string_concat("Hola ", nombre);
*   =>
*   saludo = "Hola Ritchie"
*/
char* string_concat(char* nombre1, char* nombre2){
	char * resultado = malloc(strlen(nombre1) + strlen(nombre2) + 1 );
	strcpy(resultado,nombre1);
	strcat(resultado,nombre2);
	resultado[strlen(resultado)] = '\0';
	return resultado;
}


