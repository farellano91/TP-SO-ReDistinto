#ifndef ARCHIVO_H_
#define ARCHIVO_H_

#include <stdio.h>
#include <stdlib.h>

//se debe poder abrir (definir la forma: read/write/append), cerrar un archivo,
//leer una linea determinada, exponer una operación que reciba una función y la
//ejecute por cada línea del archivo; exponer otra operación que dada una lista
//y una función, itere la lista y escriba sobre el archivo abierto lo que devuelve
//dicha función (string).

//Abre un archivo
FILE* txt_open_for_append(char* path);

//Cierra el archivo
void txt_close_file(FILE* file);

//Lee una linea especifica
void txt_read_especific_line(FILE* file, int line);

//Ejecuta una operacion sobre cada linea del file
void txt_execute_operation_file(FILE* file, void* operation);

void txt_execute_operation_list(char** list, void* operation);


#endif /* ARCHIVO_H_ */
