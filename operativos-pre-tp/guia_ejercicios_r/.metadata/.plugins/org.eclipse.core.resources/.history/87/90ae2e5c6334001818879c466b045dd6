#include <stdio.h>
#include <stdlib.h>

/*
*   Retorna un String nuevo que es la concatenación
*   de los dos Strings pasados por parámetro
*   Ejemplo:
*   char* nombre = "Ritchie";
*   char* saludo = string_concat("Hola ", nombre);
*   =>
*   saludo = "Hola Ritchie"
*/
char* string_concat(char* nombre1, char* nombre2){
	strcat(nombre1,nombre2);
	return nombre1;
}


int main(void) {
	char* nombre1 = malloc(sizeof(char)*7 +1 );
	strcpy(nombre1,"Ritchie");
	nombre1[7]='\0';
	printf("Saludo del ejercicio 1: %d",nombre1);

	free(nombre1);

	while(1){

	}
	return 0;
}
