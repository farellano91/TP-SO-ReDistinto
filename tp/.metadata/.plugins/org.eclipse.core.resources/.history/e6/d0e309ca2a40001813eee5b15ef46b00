#include <stdio.h>
#include <stdlib.h>
#include "archivo.h"

int main(int argc, char** argv) {
	//1.- conecta como cliente al planificador y al servidor

	//2.- lee el archivo
	FILE* file = txt_open_file(argv[0],"r");
	char* line = malloc(sizeof(char)*256);
	while (fgets(line, 256, file)) {
		printf("%s", line);
	}
	free(line);
	//3.- se queda esperando permiso para leer linea

	//4.- envia la linea "parseada" al coordinador
	return EXIT_SUCCESS;
}
